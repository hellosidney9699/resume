<div>
    <div class="m-5">
        <h1>{{name}}</h1>
    </div>
    <hr class="mx-5">
    <div class="mx-5">
        <p>
            {{description}}
        </p>
    </div>
    <div class="mx-5">
        {{#with history}}
        <p>It was founded in <em>{{year}}</em> by <em>{{founder}}.</em></p>
        {{/with}}
    </div>
    <hr class="mx-5">
    <br>
    <div>
        {{> card text="Types" data=types }}
    </div>
    <br>
    <hr class="mx-5">
    <div>
        {{#with syntax}}
        <div>
            <h3 class="mx-5">JavaScript syntax</h3>
        </div>
        {{> accordion-item text="Variables" data=variables }}
        {{> accordion-item text="Functions" data=functions }}
        {{> accordion-item text="Conditionals" data=conditionals }}
        {{> accordion-item text="Loops" data=loops }}
        {{> accordion-item text="Classes" data=classes }}
        {{/with}}
    </div>
    <br>
    <hr class="mx-5">
    <br>
    <div>
        {{> card text="JavaScript features" data=features }}
    </div>
    <br>
    <hr class="mx-5">
    <br>
    <div>
        {{> card text="Libraries" data=libraries }}
    </div>
    <br>
    <hr class="mx-5">
    <br>
    <div>
        {{> card text="Tools" data=tools }}
    </div>
    <br>
    <hr class="mt-5 mx-5">
    <br>
    <div class="mx-5 mt-3">
        <h3>Community</h3>
        {{#each community}}
        <ul class="list-group">
            <li class="list-group-item">name: {{name}}, type: {{type}}</li>
        </ul>
        {{/each}}
    </div>
</div>