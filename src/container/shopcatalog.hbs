<div class="mt-5">
    {{> breadcrumb}}
</div>
<div>
    <h1>{{header}}</h1>
</div>
<div class="col-12 my-4">
    <div class="row">
        {{#each sortBlock}}
        <div class="col-3">
            <select class="form-select">
                <option selected disable hidden>{{placeholder}}</option>
                {{#each options}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}
            </select>
        </div>
        {{/each}}
    </div>
</div>

<div class="col-12 my-5">
    <div class="row">
        {{#with filterBlock}}
        <div class="col-4">
            <div class="card">
                <div class="card-body">

                    {{#with sellers}}
                    <span>{{title}}</span>
                    <div class="form-check mb-1">
                        <ul class="list-unstyled">
                            {{#each list}}
                            <li class="mt-2">
                                <label class="form-check-label">{{value}}</label>
                                <input name="type" type="checkbox" class="form-check-input">
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    {{/with}}

                    <hr>

                    {{#with brands}}
                    <label class="form-label">{{title}}</label>
                    <input class="form-control" placeholder="{{input.placeholder}}">

                    <div class="form-check mb-1">
                        <ul class="list-unstyled">
                            {{#each options}}
                            <li class="mt-2">
                                <label class="form-check-label">{{value}}</label>
                                <input name="type" type="checkbox" class="form-check-input">
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    {{/with}}

                    <hr>

                    {{#with price}}
                    <span>{{title}}</span>
                    <div class="col-12">
                        <div class="row">
                            <div class="col-4">
                                <input class="form-control" placeholder="{{range.from}}">
                            </div>
                            <div class="col-4">
                                <input class="form-control" placeholder="{{range.to}}">
                            </div>
                            <div class="col-4">
                                <a href=" {{button.link}}" class="btn btn-outline-dark">{{button.text}}</a>
                            </div>
                        </div>
                    </div>
                    {{/with}}

                    <hr>

                    {{#each filterList}}
                    <span>{{title}}</span>
                    <div class="form-check mb-1">
                        <ul class="list-unstyled">
                            {{#each options}}
                            <li class="mt-2">
                                <label class="form-check-label">{{value}}</label>
                                <input name="type" type="checkbox" class="form-check-input">
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    <hr>
                    {{/each}}

                </div>
            </div>
        </div>
        {{/with}}

        {{#each goodsList}}
        <div class="col-4">
            <div class="card">
                <img src="{{img}}" class="card-img-top" alt="image">
                <div class="card-body">
                    <div>
                        {{#if isHot}}
                        <div class="badge rounded-pill text-bg-warning text-light mx-1">HOT!</div>
                        {{/if}}
                        {{#if isNew}}
                        <div class="badge rounded-pill text-bg-primary mx-1">Нове</div>
                        {{/if}}
                    </div>
                    <div class="my-3">
                        {{#if isFast}}
                        <div class="badge text-bg-success mx-1">Швидка доставка</div>
                        {{/if}}
                        {{#if isFree}}
                        <div class="badge text-bg-secondary mx-1">Безкоштовна доставка</div>
                        {{/if}}
                    </div>
                    <h5>{{name}}</h5>
                    <p>{{review.amount}} {{review.text}}</p>
                    <h4>{{price}}</h4>
                    <p>{{delivery}}</p>
                    <div>
                        {{#each buttons}}
                        <div class="mb-2">
                            {{#if isPrimary}}
                            <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                            {{/if}}
                        </div>
                        <div>
                            {{#if isSecondary}}
                            <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                            {{/if}}
                        </div>
                        {{/each}}
                    </div>
                    <div class="mt-3">
                        <ul>
                            {{#each characteristics}}
                            <li>
                                {{title}}: {{value}}
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>