<div>
    <h1 class="mt-5 mb-5">{{header}}</h1>
</div>
<div class="col-12">
    <div class="row">
        <div class="col-9">
            {{#with contacts_data}}
            <h2>{{title}}</h2>
            <div class="mt-3 mb-3">
                {{#each buttons}}
                {{#if isPrimary}}
                <button type="button" class="btn btn-warning text-light d-inline mx-1">{{text}}</button>
                {{/if}}
                {{#if isOutline}}
                <button type="button" class="btn btn-outline-warning d-inline mx-1">{{text}}</button>
                {{/if}}
                {{/each}}
            </div>

            <div class="col-12 ms-2 px-1">
                <div class="row">
                    {{#with form}}

                    {{#with input}}
                    <div class="col-6 g-2">
                        {{#with surname}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                    <div class="col-6 g-2">
                        {{#with name}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                    <div class="col-6 g-2">
                        {{#with phone}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                    <div class="col-6 g-2">
                        {{#with email}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                    {{/with}}

                    <hr class="my-4">

                    {{#each switch}}
                    {{#if isActive}}
                    <div class="form-check form-switch">
                        <label class="form-check-label">{{text}}</label>
                        <input type="checkbox" class="form-check-input" checked>
                    </div>
                    {{else}}
                    <div class="form-check form-switch mb-4">
                        <label class="form-check-label">{{text}}</label>
                        <input type="checkbox" class="form-check-input">
                    </div>
                    {{/if}}
                    {{/each}}
                    {{/with}}
                </div>
            </div>
            {{/with}}

            <hr class="my-4">

            <div class="col-12">
                {{#with delivery}}
                <h2 class="mb-3">{{title}}</h2>
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            {{#each select}}
                            <div class="col-6">
                                <label class=" form-label">{{label}}</label>
                                <select class="form-select">
                                    <option selected disable hidden>{{placeholder}}</option>
                                    {{#each options}}
                                    <option value="{{value}}">{{text}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>

                <div class="col-12 mt-3 ms-3">
                    <div class="row">
                        {{#each delivery_type}}
                        <div class="form-check col-6">
                            <label class="form-check-label">{{type}}</label>
                            <input name="type" type="radio" class="form-check-input">
                        </div>
                        <div class="col-6 text-end pe-4">
                            <p>{{value}}</p>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <div>
                <h2 class="mb-3">Оплата</h2>
                {{#each payment}}
                <div class="form-check col-6 mb-1">
                    <label class="form-check-label">{{type}}</label>
                    <input name="type" type="radio" class="form-check-input">
                </div>
                {{#if description}}<small>{{description}}</small>{{/if}}
                {{/each}}
            </div>

            <hr class="my-4">

            <div class="col-12">
                <div class="row">
                    <h2>Контактні дані отримувача</h2>
                    {{#with contact}}
                    <div class="col-6 g-2 ps-3">
                        {{#with surname}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                    <div class="col-6 g-2">
                        {{#with name}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                    <div class="col-6 g-2 ps-3">
                        {{#with phone}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                    <div class="col-6 g-2">
                        {{#with email}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
            </div>

            <hr class="my-4">

            <div>
                {{#with coment}}
                <label class="form-label">{{label}}</label>
                <input class="form-control" placeholder="{{placeholder}}">
                {{/with}}
            </div>
            {{/with}}

            <hr class="my-4">

            <div>
                <h2 class="mb-3">Купони</h2>
                {{#with coupon.select}}
                {{#with available_coupon}}
                <label class=" form-label">{{label}}</label>
                <select class="form-select form-select-lg mb-3">
                    <option selected disable hidden>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
                {{/with}}
                {{#with friend_coupon}}
                <label class=" form-label">{{label}}</label>
                <select class="form-select form-select-sm">
                    <option selected disable hidden>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
                {{/with}}
                {{/with}}
            </div>

            <div class="mt-3">
                {{#with coupon.add}}
                {{#with friend}}
                <label class="form-label">{{label}}</label>
                <input class="form-control form-control-lg" placeholder="{{placeholder}}">
                <div class="form-text">{{caption}}</div>
                {{/with}}
                {{#with colleague}}
                <label class="form-label mt-3">{{label}}</label>
                <input class="form-control form-control-sm" placeholder="{{placeholder}}">
                <div class="form-text">{{caption}}</div>
                {{/with}}
                {{/with}}
            </div>

            <hr class="my-4">

            <div>
                <div>
                    {{#with quiz}}
                    <h2 class="mb-3">{{title}}</h2>
                    {{#with preference}}
                    <span>{{title}}</span>
                    <div class="form-check mb-1">
                        <ul class="list-unstyled">
                            {{#each options}}
                            <li class="mt-2">
                                <label class="form-check-label">{{this}}</label>
                                <input name="type" type="radio" class="form-check-input">
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    {{/with}}
                </div>

                <div class="mt-2">
                    {{#with your_expirience}}
                    <label class="form-label">{{label}}</label>
                    <input class="form-control">
                    {{/with}}
                </div>

                <div class="mt-2">
                    {{#with purchase_frequency}}
                    <label class=" form-label">{{label}}</label>
                    <select class="form-select">
                        <option selected disable hidden>{{placeholder}}</option>
                        {{#each options}}
                        <option value="{{value}}">{{text}}</option>
                        {{/each}}
                    </select>
                    {{/with}}
                </div>

                <div class="mt-3">
                    {{#with factors}}
                    <span>{{title}}</span>
                    <div class="form-check mb-1">
                        <ul class="list-unstyled">
                            {{#each options}}
                            <li class="mt-2">
                                <label class="form-check-label">{{this}}</label>
                                <input name="type" type="checkbox" class="form-check-input">
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    {{/with}}
                </div>

                {{/with}}
            </div>
        </div>

        <aside class="col-3">
            <div class="card p-2 mb-3">
                <div class="card-boby">
                    {{#each action_block}}
                    {{#if isPrimary}}
                    <button type="button" class="btn btn-success mb-2">{{text}}</button>
                    {{/if}}
                    {{#if isDanger}}
                    <button type="button" class="btn btn-danger mb-2">{{text}}</button>
                    {{/if}}
                    {{#if isInfo}}
                    <button type="button" class="btn btn-info">{{text}}</button>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
            {{#with total}}
            <div class="col-12">
                <div class="card p-2">
                    <h3 class="card-title">{{title}}</h3>
                    <div class="card-boby">
                        <ul class="list-unstyled">
                            {{#each item_list}}
                            <li>
                                {{name}}: {{price}}
                            </li>
                            {{/each}}
                        </ul>
                        <hr>
                        <ul class="list-unstyled">
                            {{#each additional_info}}
                            <li>
                                {{text}}: {{value}}
                            </li>
                            {{/each}}
                        </ul>
                        <hr>
                        <ul class="list-unstyled">
                            {{#with total_price}}
                            <li>
                                {{text}}: {{value}}
                            </li>
                            {{/with}}
                        </ul>
                        <hr>
                        {{#each button}}
                        {{#if isPrimary}}
                        <button type="button" class="btn btn-primary mb-2">{{text}}</button>
                        {{/if}}
                        {{#if isOutline}}
                        <button type="button" class="btn btn-outline-primary mb-2">{{text}}</button>
                        {{/if}}
                        {{/each}}
                    </div>
                </div>
                {{/with}}
        </aside>
    </div>
</div>