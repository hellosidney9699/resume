<div>
    <div class="m-5">

        {{#with newsBlock}}
        {{> shoppost}}
        {{/with}}

        <hr class="my-5">

        {{#with goodsBlock}}
        <div>
            <ul class="nav nav-tabs">
                {{#each tabs}}
                <li class="nav-item">
                    {{#if isActive}}
                    <a class="nav-link active" href="#">{{text}}</a>
                    {{/if}}
                    {{#if isDisabled}}
                    <a class="nav-link disabled" href="#">{{text}}</a>
                    {{/if}}
                </li>
                {{/each}}
            </ul>
        </div>

        {{> shopcard}}

        <div class="col-12">
            <div class="row">
                {{#each cards}}
                <div class="col-4 mt-4 g-2">
                    <div class="card">
                        <img src="{{image}}" class="card-img-top" alt="img">
                        <div class="card-body">
                            <h6 class="card-title">{{title}}
                                {{#if isHot}}
                                <div class="badge rounded-pill text-bg-warning text-light text-uppercase mt-1">Hot</div>
                                {{/if}}
                                {{#if idNew}}
                                <div class="badge rounded-pill text-bg-primary mt-1">Нове</div>
                                {{/if}}
                            </h6>
                            <p class="card-text">{{description}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}

        <hr class="my-5">

        <section>
            {{#with subscribe}}
            <div class="alert bg-dark text-light row">
                <div class="col-6">
                    <h2 class="card-title pb-3">{{header}}</h2>
                    <p class="card-text ">{{description}}</p>
                </div>
                <div class="col-6 text-end">
                    {{#each buttons}}
                    <a rel="{{type}}" href=" {{link}}" class="btn btn-primary me-1 mt-4">{{text}}</a>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </section>

        <hr class="my-5">
    </div>