<section>
    {{> breadcrumb}}
</section>

<section>
    <div>
        {{#with newsData}}
        <img src="{{photo}}" alt="photo">
        <div class="mt-4">
            {{#with head}}
            <h2>{{heading}}</h2>
            <p>{{description}}</p>
            {{/with}}
        </div>
        <div class="mt-5">
            {{#each body}}
            <h4>{{title}}</h4>
            <p>{{text}}</p>
            {{/each}}
        </div>
        {{/with}}
    </div>
</section>

<hr class="my-5">

<section>
    {{#with newsOtherBlock}}
    {{> shoppost}}
    {{/with}}
</section>

<hr class="my-5">