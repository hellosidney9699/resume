<div class="col-8">
    <div class="row">
        {{#each goodsList}}
        <div class="col-6 px-2 pb-4">
            <div class="card">
                <img src="{{img}}" class="card-img-top" alt="image">
                <div class="card-body">
                    <div>
                        {{#if isHot}}
                        <div class="badge rounded-pill text-bg-warning text-light mx-1">HOT!</div>
                        {{/if}}
                        {{#if isNew}}
                        <div class="badge rounded-pill text-bg-primary mx-1">Нове</div>
                        {{/if}}
                    </div>
                    <div class="my-3">
                        {{#if isFast}}
                        <div class="badge text-bg-success mx-1">Швидка доставка</div>
                        {{/if}}
                        {{#if isFree}}
                        <div class="badge text-bg-secondary mx-1">Безкоштовна доставка</div>
                        {{/if}}
                    </div>
                    <h5>{{name}}</h5>
                    <p>{{review.amount}} {{review.text}}</p>
                    <h4>{{price}}</h4>
                    <p>{{delivery}}</p>
                    <div>
                        {{#each buttons}}
                        <div class="mb-2">
                            {{#if isPrimary}}
                            <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                            {{/if}}
                        </div>
                        <div>
                            {{#if isSecondary}}
                            <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                            {{/if}}
                        </div>
                        {{/each}}
                    </div>
                    <div class="mt-3">
                        <ul>
                            {{#each characteristics}}
                            <li>
                                {{title}}: {{value}}
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>