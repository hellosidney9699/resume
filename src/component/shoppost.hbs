<div>
    <div>
        <h3 class="text-center mt-5">{{title}}</h3>
    </div>
    <div class="col-12">
        <div class="row">
            {{#each cards}}
            <div class="col-3 g-1">
                <div class="card text-bg-dark mb-2">
                    <div class="card-header">
                        {{title}}
                        {{#if isTop}}
                        <div class="badge rounded-pill text-bg-danger mx-1">Топ</div>
                        {{/if}}
                        {{#if idNew}}
                        <div class="badge rounded-pill text-bg-success mx-1">Нова</div>
                        {{/if}}
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>