<div class="col-12">
    <div class="row">
        {{#each cards}}
        <div class="col-4 mt-3 g-2">
            <div class="card">
                <img src="{{image}}" class="card-img-top" alt="img">
                <div class="card-body">
                    <h6 class="card-title">{{title}}
                        {{#if isHot}}
                        <div class="badge rounded-pill text-bg-warning text-light text-uppercase mt-1">Hot</div>
                        {{/if}}
                        {{#if idNew}}
                        <div class="badge rounded-pill text-bg-primary mt-1">Нове</div>
                        {{/if}}
                    </h6>
                    <p class="card-text">{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>